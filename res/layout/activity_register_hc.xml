<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:hc="http://schemas.android.com/apk/res/com.xiaoyu.DoctorHelp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e4e4e4">
    <!--header-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f8f6f3">
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="18dp"
                android:id="@+id/backFL">
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_back"
                    android:layout_gravity="right|center_vertical"/>
        </FrameLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:textColor="#222222"
                android:text="注册"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/commit"
                android:paddingRight="12dp"
                android:text="提交"
                android:textColor="#f0673d"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:gravity="center"/>
    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"
            android:layout_marginBottom="25dp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gray_stroke_white_bg_shape"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">
            <!--avatar-->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/avatarRL"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                <com.xiaoyu.DoctorHelp.widget.CircleImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/avatar"
                        android:scaleType="centerCrop"
                        hc:border_color="#dad8d8"
                        hc:border_width="2dp"
                        android:background="#e4e4e4"
                        android:layout_centerVertical="true"/>
                <ImageView
                        android:layout_width="12dp"
                        android:layout_height="21dp"
                        android:src="@drawable/icon_right_arrow"
                        android:id="@+id/arrowAvatar"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e2e2e2"/>
            <!--手机号-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textColor="#474747"
                        android:textSize="12sp"/>
                <EditText
                        android:id="@+id/phoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="请输入手机号"
                        android:textColorHint="#c1c1c1"
                        android:paddingLeft="10dp"
                        android:background="#00000000"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e2e2e2"/>
            <!--密码-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="密 码"
                        android:textColor="#474747"
                        android:textSize="12sp"/>
                <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入密码"
                        android:textColorHint="#c1c1c1"
                        android:paddingLeft="10dp"
                        android:background="#00000000"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e2e2e2"/>
            <!--姓名-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓 名"
                        android:textColor="#474747"
                        android:textSize="12sp"/>
                <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入姓名"
                        android:textColorHint="#c1c1c1"
                        android:paddingLeft="10dp"
                        android:background="#00000000"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e2e2e2"/>
            <!--头衔-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="头 衔"
                        android:textColor="#474747"
                        android:textSize="12sp"/>
                <EditText
                        android:id="@+id/doctorTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入头衔"
                        android:textColorHint="#c1c1c1"
                        android:paddingLeft="10dp"
                        android:background="#00000000"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e2e2e2"/>
            <!--擅长-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="擅 长"
                        android:textColor="#474747"
                        android:textSize="12sp"/>
                <EditText
                        android:id="@+id/goodAt"
                        android:padding="5dp"
                        android:gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:hint="请输入擅长领域"
                        android:textColorHint="#c1c1c1"
                        android:background="#00000000"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e2e2e2"/>
            <!--简介-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自己简介"
                        android:textColor="#474747"
                        android:textSize="12sp"/>
                <EditText
                        android:id="@+id/brief"
                        android:gravity="top"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:hint="简单介绍自己"
                        android:textColorHint="#c1c1c1"
                        android:background="#00000000"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e2e2e2"/>
            <!--医院-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所在医院"
                        android:textColor="#474747"
                        android:textSize="12sp"/>
                <EditText
                        android:id="@+id/hospital"
                        android:gravity="top"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:hint="请输入医院"
                        android:textColorHint="#c1c1c1"
                        android:background="#00000000"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e2e2e2"/>
            <!--学历证-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学历证"
                        android:textColor="#474747"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                <com.xiaoyu.DoctorHelp.widget.FixWidthFrameLayout
                        android:id="@+id/xueLiFL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/xueLiImage"
                            android:scaleType="centerCrop"/>
                    <ImageView android:layout_width="68dp"
                               android:layout_height="68dp"
                               android:layout_gravity="center"
                               android:src="@drawable/icon_add_pic"/>
                </com.xiaoyu.DoctorHelp.widget.FixWidthFrameLayout>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e2e2e2"/>
            <!--咨询师证-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="咨询师证"
                        android:textColor="#474747"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                <com.xiaoyu.DoctorHelp.widget.FixWidthFrameLayout
                        android:id="@+id/ziXunShiFL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ziXunShiImage"
                            android:scaleType="centerCrop"/>
                    <ImageView android:layout_width="68dp"
                               android:layout_height="68dp"
                               android:layout_gravity="center"
                               android:src="@drawable/icon_add_pic"/>
                </com.xiaoyu.DoctorHelp.widget.FixWidthFrameLayout>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e2e2e2"/>
            <!--身份证-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginBottom="15dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证"
                        android:textColor="#474747"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                <com.xiaoyu.DoctorHelp.widget.FixWidthFrameLayout
                        android:id="@+id/shenFenFL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/shenFenImage"
                            android:scaleType="centerCrop"/>
                    <ImageView android:layout_width="68dp"
                               android:layout_height="68dp"
                               android:layout_gravity="center"
                               android:src="@drawable/icon_add_pic"/>
                </com.xiaoyu.DoctorHelp.widget.FixWidthFrameLayout>
            </LinearLayout>
            <!--阅读协议-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="注册前请阅读注册协议"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:id="@+id/readXieYi"
                    android:gravity="center"
                    android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>